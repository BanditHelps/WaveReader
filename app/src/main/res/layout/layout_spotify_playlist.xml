<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spotifyPlaylistCard"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    app:cardBackgroundColor="#121212"
    app:cardCornerRadius="0dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1DB954"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_spotify_logo"
                android:contentDescription="Spotify logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Spotify Playlists"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/closePlaylistButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close playlist menu"
                android:src="@drawable/ic_close"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="#212121">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search"
                android:tint="#B3B3B3"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/playlistSearchEditText"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@null"
                android:hint="Search playlists"
                android:textColorHint="#B3B3B3"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                android:inputType="text" />
        </LinearLayout>

        <!-- Playlists RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlistsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_spotify_playlist" />

        <!-- Now Playing Section -->
        <LinearLayout
            android:id="@+id/nowPlayingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOW PLAYING"
                android:textColor="#1DB954"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/miniAlbumArtImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:background="#333333"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/miniTrackNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        tools:text="Song Title" />

                    <TextView
                        android:id="@+id/miniArtistNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#B3B3B3"
                        android:textSize="12sp"
                        tools:text="Artist Name" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/miniPlayPauseButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play or pause"
                    android:padding="8dp"
                    android:src="@drawable/ic_play"
                    android:tint="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>